# Texme Backend Environment Configuration
# Copy this file to .env and fill in the values

APP_NAME=Texme
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=texme
DB_USERNAME=root
DB_PASSWORD=

# ========== OTP Configuration ==========
# Provider options: log, msg91, 2factor, twilio
OTP_PROVIDER=log
OTP_SENDER_ID=TEXME

# MSG91 (https://msg91.com)
OTP_API_KEY=your_msg91_authkey
MSG91_TEMPLATE_ID=your_template_id

# 2Factor (https://2factor.in)
# Set OTP_API_KEY to your 2factor API key

# Twilio (https://twilio.com)
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_FROM=+1234567890

# ========== Payment Gateways ==========

# Razorpay (https://razorpay.com)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# PayU (https://payu.in)
PAYU_MERCHANT_KEY=your_merchant_key
PAYU_SALT=your_salt
PAYU_MODE=test

# Cashfree (https://cashfree.com)
CASHFREE_APP_ID=your_app_id
CASHFREE_SECRET_KEY=your_secret_key
CASHFREE_WEBHOOK_SECRET=your_webhook_secret
CASHFREE_MODE=test

# ========== Pusher (Real-time) ==========
# Create free account at https://pusher.com
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=ap2

BROADCAST_CONNECTION=pusher

# ========== File Storage ==========
FILESYSTEM_DISK=public
